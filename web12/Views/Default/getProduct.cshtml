@model IEnumerable<web12.Models.product>
@foreach (var item in Model)
{
    <div>
    <div class="col-md-3 product-men">
        <div class="men-pro-item simpleCart_shelfItem">
            <div class="men-thumb-item">
                <img src="~/Content/images/anh/@item.img" alt="" class="pro-image-front">
                <img src="~/Content/images/anh/@item.img" alt="" class="pro-image-back">
                <div class="men-cart-pro">
                    <div class="inner-men-cart-pro">
                       
                        <a href="/@ViewBag.meta/@item.meta/@item.id" class="link-product-add-cart">Quick View</a>
                    </div>
                </div>
                <span class="product-new-top">@item.name</span>

            </div>
            <div class="item-info-product ">
                <h4><a href="/@ViewBag.meta/@item.meta/@item.id">@item.name</a></h4>
                <div class="info-product-price">
                    <span class="item_price">@item.price</span>
                    <del>@item.price</del>
                </div>
                <a href="#" class="item_add single-item hvr-outline-out button2">Add to cart</a>
            </div>
        </div>
    </div>
        </div>
}
<div class="clearfix"></div>